@model HealthCare.Models.ClinicDoctor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ClinicDoctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Clinic" class="control-label"></label>
                <select id="clinic" asp-for="Clinic" asp-items="ViewBag.Clinic" class="form-control"></select>
                <span asp-validation-for="Clinic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <select id="doctor" asp-for="Doctor" asp-items="ViewBag.Doctor" class="form-control"></select>
                <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="ClinicId" />
            <input type="hidden" asp-for="DoctorId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
